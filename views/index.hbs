
{{#if error_messages}}
<div class="alert alert-danger" role="alert">
  {{error_messages}}
</div>
{{/if}}

<form action="/" method="post" novalidate>
  <div class="form-group row">
    <label for="originalURL" class="col-sm-2 col-form-label col-form-label-lg">URL</label>
    <div class="col-sm-9">
      <input type="text" class="form-control form-control-lg {{#if urlValidation}} is-invalid {{/if}} " id="originalURL" placeholder="請輸入您想要縮短的網址" {{#if inputURL}} value="{{ inputURL }} {{/if}}" name="originURL" required>
      <div id="validationServer04Feedback" class="invalid-feedback">
        請輸入有效網址！
      </div>
    </div>   
  </div>

  <div class="form-group row">
    <label for="shortenURL" class="col-sm-2 col-form-label col-form-label-lg">ShortenURL</label>
    <div class="col-sm-9">
      <input type="text" readonly class="form-control form-control-lg" id="shortenURL" {{#if shortenURL}} value="{{ shortenURL }}"
        {{/if}}>
    </div>
    <div class="input-group-append">
      <button class="btn btn-outline-secondary" id="copy-button" type="button"><i class="fas fa-copy"></i></button>
    </div>
  </div>
  <div class="form-group row">
    <button type="submit" class="btn btn-success w-100 mx-auto">送出</button>
  </div>
</form>